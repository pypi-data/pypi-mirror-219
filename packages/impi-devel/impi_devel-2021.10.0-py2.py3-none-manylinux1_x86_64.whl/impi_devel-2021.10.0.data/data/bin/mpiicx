COMPILER="icx"
TARGET_WRAPPER="mpiicc"

if [ -z "$1" ] ; then
    ${TARGET_WRAPPER} -help
    exit 0
fi

for arg in "$@" ; do
    case $arg in 
        -cc=*)
            compiler_name=$(echo $arg | sed -e 's/-cc=//g')
            echo "Error: can not overwrite predefined compiler - ${COMPILER}!"
            echo "You should use ${TARGET_WRAPPER}"
            echo "ex. ${TARGET_WRAPPER} -cc=${compiler_name}"
            exit 1
        ;;
    esac
done

mpiicc -cc="${COMPILER} $@"
